{
	"compilerOptions": {
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./",
		"checkJs": false,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"lib": [
			"esnext",
			"dom",
			"WebWorker"
		],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "./dist",
		"paths": {
			"@/*": [
				"src/*"
			],
			"#/apis/*": [
				"src/apis/*"
			]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "esnext",
		"types": [
			"vite/client",
			"element-plus/global"
		],
		"useDefineForClassFields": true
	},
	"exclude": [
		"node_modules",
		".vscode"
	],
	"include": [
		"./*.d.ts",
		"./src/**/*"
	],
	"ts-node": {
		"files": true,
		"transpileOnly": true
	}
}